extends layout 

block content 
  h1=title 

  form(method="POST" action="")
    .form-group 
    label(for='name') Name:
    input#name.form-control(type='text' placeholder="Name" name='name' required='true' value=(category===undefined ? '' : category.name))
    .form-group
    label(for='description') Description 
    input#description.form-control(type='text' placeholder="Description" name='description' required='true' value=(category===undefined ? '' : category.description))
    .form-group
    button.btn.btn-primary(type='submit') Submit 

  if errors
    ul 
      for error in errors
        li!=error.msg

  .form-group
  p
    a(href="/inventory/categories") Back to categories